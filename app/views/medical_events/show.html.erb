<%- model_class = MedicalEvent -%>
<div class="page-header">
  <h1><%=t '.title', :default => MedicalEvent %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:id) %></dt>
      <dd><pre class="prettyprint"><%= @medical_event.id %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:occurred_at) %></dt>
      <dd><pre class="prettyprint"><%= @medical_event.occurred_at %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:summary) %></dt>
      <dd><pre class="prettyprint"><%= @medical_event.summary %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @medical_event.description %></pre></dd>

      <dt class="label label-default"><%= model_class.human_attribute_name(:created_at) %></dt>
      <dd><pre class="prettyprint"><%= @medical_event.occurred_at %></pre></dd>      
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              medical_events_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_medical_event_path(@medical_event), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              medical_event_path(@medical_event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

