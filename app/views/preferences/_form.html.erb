<%= form_for @preference, :html => { :class => 'form-horizontal form-model' } do |f| %>
  
  <div class="form-group">
    <div class="col-md-10">        

    <ul>
      <% Preference::CARE_DATA_SETTING_VALUES.each do |index, value| %>
        <li>
          <%= f.radio_button( :care_data_privacty_setting, index ) %>    
          <%= f.label( "care_data_privacty_setting", value ) %>
        </li>
      <% end %>
    </ul>

    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  preferences_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>