<%= form_for @preference, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :care_data_privacty_setting, :class => 'control-label col-md-2' %>
    <% Preference::CARE_DATA_SETTING_VALUES.each do |index, value| %>
      <%= value %>
    <% end %>
    <div class="col-md-10">
      <%= f.number_field :care_data_privacty_setting, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  preferences_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
